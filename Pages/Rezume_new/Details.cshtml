@using WebAppCZN.Data.BD
@model WebAppCZN.Pages.Rezume_new.DetailsModel
@inject WebAppCZN.Data.ApplicationDbContext _context
@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Подробнее</h1>

<div>
    <h4>Резюме</h4>
    <hr />
    <div class="row">
        <div class="container mt-2">
            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-3 pt-2">
                            <div class="row">
                            <div>
                                <h2 style="margin-left: 1rem;">Личные данные</h2>
                            </div>
                                <div class="col-md-5">
                               
                              
                                    <div class="form-group">
                                        <div class="ml-2" style="margin-left: 1rem;">
                                            <label asp-for="Личные_данные.Фамилия" class="control-label"></label>
                                        <input asp-for="Личные_данные.Фамилия" class="form-control mt-1 " readonly />
                                            <span asp-validation-for="Личные_данные.Фамилия" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="ml-2" style="margin-left: 1rem;">
                                            <label asp-for="Личные_данные.Имя" class="control-label mt-2"></label>
                                        <input asp-for="Личные_данные.Имя" class="form-control mt-1" readonly />
                                            <span asp-validation-for="Личные_данные.Имя" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="ml-2" style="margin-left: 1rem;">
                                            <label asp-for="Личные_данные.Отчество" class="control-label mt-2"></label>
                                        <input asp-for="Личные_данные.Отчество" class="form-control mt-1" readonly />
                                            <span asp-validation-for="Личные_данные.Отчество" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="ml-2" style="margin-left: 1rem;">
                                            <label asp-for="Личные_данные.Дата_рождения" class="control-label mt-2"></label>
                                        <input asp-for="Личные_данные.Дата_рождения" class="form-control mt-1" readonly />
                                            <span asp-validation-for="Личные_данные.Дата_рождения" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="ml-2" style="margin-left: 1rem;">
                                            <label asp-for="Личные_данные.ID_пола" class="control-label mt-2">Пол</label>
                                            <input asp-for="Личные_данные.Пол.пол" class="form-control mt-1" readonly />
                                            <span asp-validation-for="Личные_данные.ID_пола" class="text-danger"></span>
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <div class="ml-2 mb-3" style="margin-left: 1rem;">
                                            <label asp-for="Личные_данные.Телефон" class="control-label mt-2"></label>
                                        <input asp-for="Личные_данные.Телефон" class="form-control mt-1" readonly />
                                            <span asp-validation-for="Личные_данные.Телефон" class="text-danger"></span>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-md-5" style="margin-left: 2rem;">

                                    <div class="form-group ">
                                        <label asp-for="Личные_данные.Серия_паспорта" class="control-label"></label>
                                        <div class="col-md-7">
                                        <input asp-for="Личные_данные.Серия_паспорта" class="form-control mt-1 col-md-3" type="text" inputmode="numeric" readonly />
                                        </div>

                                        <span asp-validation-for="Личные_данные.Серия_паспорта" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Личные_данные.Номер_паспорта" class="control-label mt-2"></label>
                                        <div class="col-md-7">
                                        <input asp-for="Личные_данные.Номер_паспорта" class="form-control mt-1 col-md-5" type="text" inputmode="numeric" readonly />
                                        </div>
                                        <span asp-validation-for="Личные_данные.Номер_паспорта" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Личные_данные.Дата_выдачи_паспорта" class="control-label mt-2"></label>
                                        <div class="col-md-7">
                                        <input asp-for="Личные_данные.Дата_выдачи_паспорта" class="form-control mt-1 col-md-5" readonly />
                                        </div>
                                        <span asp-validation-for="Личные_данные.Дата_выдачи_паспорта" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Личные_данные.Кем_выдан_паспорт" class="control-label mt-2"></label>
                                        <div class="col-md-12">
                                        <textarea asp-for="Личные_данные.Кем_выдан_паспорт" class="form-control mt-1 " readonly></textarea>
                                        </div>
                                        <span asp-validation-for="Личные_данные.Кем_выдан_паспорт" class="text-danger"></span>
                                    </div>

                                    <div class="form-group mb-3">
                                        <label asp-for="Личные_данные.Адрес_регистрации" class="control-label mt-2"></label>
                                        <div class="col-md-12">
                                        <textarea asp-for="Личные_данные.Адрес_регистрации" class="form-control mt-1" readonly> </textarea>
                                        </div>
                                        <span asp-validation-for="Личные_данные.Адрес_регистрации" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                     
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card mb-3 pt-2">
                       <div class="container">
                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Резюме.ID_резюме" />
                                <div class="form-group">
                                    <label asp-for="Резюме.Желаемая_должность" class="control-label"></label>
                                    <input asp-for="Резюме.Желаемая_должность" class="form-control" readonly />
                                    <span asp-validation-for="Резюме.Желаемая_должность" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Резюме.Профессия" class="control-label"></label>
                                    <input asp-for="Резюме.Профессия" class="form-control" readonly />
                                    <span asp-validation-for="Резюме.Профессия" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Резюме.Сфера_деятельности" class="control-label"></label>
                                    <input asp-for="Резюме.Сфера_деятельности" class="form-control" readonly />
                                    <span asp-validation-for="Резюме.Сфера_деятельности" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Резюме.Зарплата" class="control-label"></label>
                                    <input asp-for="Резюме.Зарплата" class="form-control" readonly />
                                    <span asp-validation-for="Резюме.Зарплата" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Резюме.Дата_готовности_к_работе" class="control-label"></label>
                                    <input asp-for="Резюме.Дата_готовности_к_работе" class="form-control" readonly />
                                    <span asp-validation-for="Резюме.Дата_готовности_к_работе" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Резюме.Адрес_места_жительства" class="control-label"></label>
                                    <input asp-for="Резюме.Адрес_места_жительства" class="form-control" readonly />
                                    <span asp-validation-for="Резюме.Адрес_места_жительства" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Резюме.ID_формы_занятости" class="control-label">График работы</label>
                                    <input asp-for="Резюме.График_Работы.Форма_занятости" class="form-control" readonly></input>
                                    <span asp-validation-for="Резюме.ID_формы_занятости" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <div class="mb-3">
                                        <label asp-for="Резюме.ID_тип_занятости" class="control-label">Тип занятости</label>
                                        <input asp-for="Резюме.Тип_Занятости.Тип_Занятости" class="form-control" readonly></input>
                                        <span asp-validation-for="Резюме.ID_тип_занятости" class="text-danger"></span>

                                    </div>
                              
                                </div>
                            </form>
                       </div>
                    
                </div>
                </div>
            </div>
        </div>
    </div>
    


   
</div>
<div>
    <a asp-page="./Index">Обратно к таблице</a>
</div>
